<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Danh sách phòng
        <a class="btn btn-success" style="float:right; color: #fff;" href="add-room">Thêm</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Mã phòng</th>
                        <th>Khách sạn</th>
                        <th>Giá phòng</th>
                        <th>Loại phòng</th>
                        <th class="text-center thao-tac">Thao tác</th>
                    </tr>
                </thead>
                <% if(page = 'roomlist') page = 'room'%>
                <tbody>
                    <% if(locals.datas) { %>
                    <% datas.forEach(item => { %>
                    <tr>
                        <td><%= item.id %></td>
                        <td><%= item.maso %></td>
                        <td><%= item.hotel %></td>
                        <td><%= item.price %></td>
                        <td><%= item.room_type %></td>
                        <td class="text-center thao-tac">
                            <a href="edit-<%=page%>/<%=item.id%>">sửa</a>
                            <span> - </span>
                            <a href="delete-<%=page%>/<%=item.id%>" onclick="_delete(); return false ;">xóa</a>
                        </td>

                        <script>
                            function _delete () {
                                if(confirm('Bạn chắc chắn muốn xóa ? \n Dữ liệu sẽ không thể khôi phục!')) {
                                    next();
                                }
                            }
                        </script>
                    </tr>
                    <% }) %>
                    <% } %>
                </tbody>
                
            </table>
        </div>
    </div>
</div>